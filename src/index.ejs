<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Podcast Web App Template</title>
    <!--CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css">
    <link rel="stylesheet" href="css/main.css" type="text/css">
    <!--CSS-->
</head>
<body>
    <header class="header">
        <div class="header__wrap wrap">
            <div class="row middle-xs">
                <div class="col-xs-6 start-xs ">
                    <h2 class="header__title">
                        Podcast Web App Template
                    </h2>
                </div>
                <div class="col-xs-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="avatar__wrap">
                                <span class="avatar__name">evgeny</span>
                                <img src="img/ava.jpg" class="avatar__img" alt="ava">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="user-podcast">
        <div class="container wrap user-podcast__wrap">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="user-podcast__title">
                        My podcasts
                    </h2>
                </div>
            </div>
            <div class="row">

                <% const userPodcastList = [
                    {title: 'Радио-Т', description: 'Еженедельные разговоры на темы хайтек, высоких компьютерных технологий, гаджетов, облаков, программирования и прочего интересного из мира ИТ.', image: 'radiot' ,url: 'https://radio-t.com/'},
                    {title: 'UWP', description: 'Невыдуманные рассказы из американской жизни', image: 'uwp' ,url: 'https://podcast.umputun.com/'},
                    {title: 'Отвратительные мужики', description: 'Не унывай и не тупей! Независимый ресурс о знаниях и развлечениях, подкаст и коммьюнити.', image: 'disgustingmen' ,url: 'https://disgustingmen.com/'},
                    {title: 'Завтракаст', description: 'Завтрашний день в технологиях, играх, медиа и интернете. Обо всём понемногу, с юмором и хорошей музыкой. 18+', image: 'zavtracast' ,url: 'https://zavtracast.ru/'},
                ]; %>

                <% userPodcastList.forEach((item) => { %>
                    <div class="col-xs-12 col-sm-6 col-md-4 user-podcast-item__wrap">
                        <div class="user-podcast-item">
                            <div class="row">
                                <div class="col-xs-8">
                                    <div class="user-podcast-item__info">
                                        <h3 class="user-podcast-item__title">
                                            <%= item.title %>
                                        </h3>
                                        <p class="user-podcast-item__description">
                                            <%= item.description %>
                                        </p>
                                        <a href="<%= item.url %>" class="user-podcast-item__link">
                                            <i class="icon-globe"></i>
                                            <%= item.url %>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="user-podcast-item__logo-wrap">
                                        <img src="img/<%= item.image %>.jpg" class="user-podcast-item__logo" alt="<%= item.image %>">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </section>
<!--JavaScript-->

<!--JavaScript-->
</body>
</html>
